[req]
default_bits  = 2048
distinguished_name = req_distinguished_name
req_extensions = req_ext
x509_extensions = v3_req
prompt = no

[req_distinguished_name]
countryName = CN
stateOrProvinceName = SC
localityName = CD
organizationName = Ted
commonName = Mule

[req_ext]
subjectAltName = @alt_names

[v3_req]
subjectAltName = @alt_names

[alt_names]
IP.1 = 127.0.0.1
IP.2 = 192.168.2.91
DNS.1 = mutant.apps.svc
DNS.2 = mutant.apps.svc.cluster.local
DNS.3 = mutant.tools.svc
DNS.4 = mutant.tools.svc.cluster.local
